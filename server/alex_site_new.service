[Unit]
Description=uWSGI Alex_Site server instance
After=syslog.target

[Service]
ExecStart=/apps/venv/bin/uwsgi -H /apps/venv --master --processes 4 --threads 2 --http :5003 --manage-script-name --python-path /apps/alex_site_new --mount /=wsgi:app
RuntimeDirectory=/apps/alex_site_new/
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target